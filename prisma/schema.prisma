// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  emailVerified Boolean  @default(true)
  name          String
  image         String?
  role          UserRole @default(CLIENT)
  companyId     String?
  company       Company? @relation("CompanyUsers", fields: [companyId], references: [id])

  // Profile
  phone      String?
  address    String?
  city       String?
  province   String?
  postalCode String?

  // Relations
  clients       Client[]       @relation("CreatedBy")
  invoices      Invoice[]      @relation("IssuedBy")
  payments      Payment[]      @relation("RecordedBy")
  meterReadings MeterReading[] @relation("RecordedBy")
  accounts      Account[]
  sessions      Session[]
  metersReplaced Meter[]       @relation("MeterReplacedBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([email])
  @@map("user")
  logs Log[]
}

enum UserRole {
  ADMIN
  CASHIER
  CLIENT
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  providerId            String
  providerAccountId     String    @default(uuid())
  type                  String    @default("credentials")
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  accountId String

  @@unique([providerId, providerAccountId])
  @@map("account")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String

  @@unique([token])
  @@map("session")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Company model for multi-tenant support
model Company {
  id       String @id @default(cuid())
  name     String
  taxId    String @unique
  email    String
  phone    String
  address  String
  city     String
  province String

  // Payment config
  acceptCash         Boolean @default(true)
  acceptCard         Boolean @default(false)
  acceptBankTransfer Boolean @default(true)
  acceptEmola        Boolean @default(false)
  acceptMpesa        Boolean @default(false)

  // Bank info
  bankName    String?
  bankAccount String?
  bankCode    String?

  // Pricing
  minimumCharge      Decimal @default(300)
  minimumCubicMeters Int     @default(5)
  pricePerCubicMeter Decimal @default(100)

  // Logo
  logo String?

  // Relations
  users    User[]    @relation("CompanyUsers")
  clients  Client[]
  meters   Meter[]
  invoices Invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  logs Log[]
}

// Client model - main customer data
model Client {
  id             String    @id @default(cuid())
  companyId      String
  company        Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  email          String
  phone          String
  name           String
  address        String
  nrContrato     Int?      @unique
  isActive       Boolean   @default(true)
  connectionDate DateTime  @default(now())
  createdById    String
  createdBy      User      @relation("CreatedBy", fields: [createdById], references: [id])
  
  // Relations
  meters         Meter[]
  readings       MeterReading[]
  invoices       Invoice[]
  payments       Payment[]
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([companyId, email])
  @@index([companyId])
  @@index([email])
  @@map("clients")
}

// Meter model - supports full history with replacement tracking
model Meter {
  id                String      @id @default(cuid())
  companyId         String
  company           Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  clientId          String
  client            Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  meterNumber       String
  serialNumber      String
  
  // Status and lifecycle
  status            MeterStatus @default(ACTIVE)
  installationDate  DateTime    @default(now())
  lastReading       Decimal     @default(0)
  lastReadingDate   DateTime?
  
  isCurrentMeter    Boolean     @default(true)
  replacedAt        DateTime?
  replacedById      String?     @unique
  replacedBy        Meter?      @relation("MeterReplacement", fields: [replacedById], references: [id])
  replacedMeter     Meter?      @relation("MeterReplacement")
  replacedByUserId  String?
  replacedByUser    User?       @relation("MeterReplacedBy", fields: [replacedByUserId], references: [id])
  
  replacementReason String?
  notes             String?
  
  // Relations
  readings          MeterReading[]
  invoices          Invoice[]     @relation("InvoiceMeter")
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@unique([companyId, meterNumber])
  @@index([clientId])
  @@index([companyId])
  @@index([status])
  @@map("meters")
}

enum MeterStatus {
  ACTIVE
  INACTIVE
  DAMAGED
  REPLACED
}

// MeterReading model - complete meter reading history
model MeterReading {
  id              String   @id @default(cuid())
  companyId       String
  meterId         String
  meter           Meter    @relation(fields: [meterId], references: [id], onDelete: Cascade)
  
  clientId        String
  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  reading         Decimal
  previousReading Decimal
  consumption     Decimal
  
  readingDate     DateTime @default(now())
  recordedById    String
  recordedBy      User     @relation("RecordedBy", fields: [recordedById], references: [id])
  
  notes           String?
  
  createdAt       DateTime @default(now())

  @@index([meterId])
  @@index([readingDate])
  @@index([recordedById])
  @@map("readings")
}

// Invoice model
model Invoice {
  id              String        @id @default(cuid())
  companyId       String
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  invoiceNumber   String
  clientId        String
  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  meterId         String
  meter           Meter?        @relation("InvoiceMeter", fields: [meterId], references: [id])
  
  
  previousReading Decimal
  currentReading  Decimal
  consumption     Decimal
  
  baseCharge      Decimal
  unitPrice       Decimal
  totalAmount     Decimal
  
  issuanceDate    DateTime      @default(now())
  dueDate         DateTime
  status          InvoiceStatus @default(PENDING)
  notes           String?
  
  issuedById      String
  issuedBy        User          @relation("IssuedBy", fields: [issuedById], references: [id])
  payments        Payment[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([companyId, invoiceNumber])
  @@index([clientId])
  @@index([companyId])
  @@index([status])
  @@index([dueDate])
  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

// Payment model
model Payment {
  id               String        @id @default(cuid())
  companyId        String
  invoiceId        String
  invoice          Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  clientId         String
  client           Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  amount           Decimal
  paymentMethod    PaymentMethod
  paymentReference String?
  receiptNumber    String        @unique
  recordedById     String
  recordedBy       User          @relation("RecordedBy", fields: [recordedById], references: [id])
  paymentDate      DateTime      @default(now())
  notes            String?
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([invoiceId])
  @@index([clientId])
  @@index([paymentDate])
  @@map("payments")
}

enum PaymentMethod {
  CASH
  CARD
  BANK_TRANSFER
  EMOLA
  MPESA
}

model Log {
  id            String   @id @default(cuid())
  companyId     String?
  userId        String?
  action        String   // Ex: "CREATE_CLIENT", "UPDATE_METER", "DELETE_USER"
  entity        String   // Ex: "Client", "Meter", "Payment"
  entityId      String?  // ID do registo afetado
  description   String?  // Texto descritivo da ação
  ipAddress     String?  // IP do utilizador que executou a ação
  userAgent     String?  // Navegador ou aplicação usada
  createdAt     DateTime @default(now())

  // Relações opcionais (caso tenhas estas tabelas)
  company       Company? @relation(fields: [companyId], references: [id])
  user          User?    @relation(fields: [userId], references: [id])
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
